<script>

    function placeholder(element) {
        return $("<li class='list-item' id='placeholder'>Drop Here!</li>");
    }
    function getTopList() {
        debugger;
        var htmlStart = "[LIST=1]";
        var htmlBody = "";
        var htmlEnd = "[/LIST]";
        $('#sortableList-Yours li').each(function (e, value) {
            htmlBody = htmlBody + "[*]" + value.innerText;
        });

        var html = htmlStart + htmlBody + htmlEnd;

        var dialog = $('#dialog');

        dialog.kendoDialog({
            width: "450px",
            title: "Software Update",
            closable: false,
            modal: false,
            content: html,
            actions: [
                { text: 'Close' }
            ]
        });
        dialog.data("kendoDialog").open();
    }
</script>
